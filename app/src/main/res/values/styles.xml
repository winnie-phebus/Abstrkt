<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PillShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="backgroundColor">@color/primary_color</item>
    </style>

    <style name="ShapeAppearanceOverlay.Cut">
        <item name="cornerSize">25%</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeAppearanceOverlay.Cut.Medium">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="GreenTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- default green light theme-->
        <item name="colorPrimary">@color/green_main</item>
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="textFillColor">@color/black</item>
        <item name="colorControlActivated">@color/green_main</item>
    </style>

    <style name="GreenThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- default green light theme-->
        <item name="colorPrimary">@color/green_main</item>
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="textFillColor">@color/white</item>
        <item name="colorControlActivated">@color/green_main</item>
    </style>

    <style name="BlueTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- default green light theme-->
        <item name="colorPrimary">@color/blue_main</item>
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="textFillColor">@color/black</item>
        <item name="colorControlActivated">@color/blue_main</item>
    </style>

    <style name="BlueThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- default green light theme-->
        <item name="colorPrimary">@color/blue_main</item>
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="textFillColor">@color/white</item>
        <item name="colorControlActivated">@color/blue_main</item>
    </style>




</resources>