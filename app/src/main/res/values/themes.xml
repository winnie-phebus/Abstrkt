<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Abstrkt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="GreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- default green light theme-->
        <item name="colorPrimary">@color/green_main</item>
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="textFillColor">@color/black</item>
        <item name="colorControlActivated">@color/green_main</item>
    </style>

    <style name="BlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- default green light theme-->
        <item name="colorPrimary">@color/blue_main</item>
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="textFillColor">@color/black</item>
        <item name="colorControlActivated">@color/blue_main</item>
    </style>

    <!--- TODO: customize our personal theme to match this standard: https://github.com/firebase/FirebaseUI-Android/blob/master/docs/upgrade-to-8.0.md in the auth transition to material components section-->
    <!-- https://m3.material.io/ for material Design ref -->
    <style name="Theme.Abstrkt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- style name="Theme.Abstrkt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" /> -->

    <style name="Theme.Abstrkt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>